@model PersonasAPI.Models.UsuarioModelo
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Login</title>
</head>
<body class="bg-black">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-sm-4">
                <div class="card bg-dark text-white" style="margin-top:250px">
                    <div class="card-header text-center">
                        <h3>Login</h3>
                    </div>
                    <div class="card-body m-5">
                        <form asp-action="Login" asp-controller="Login" method="post">
                            <div class="row mb-3 justify-content-center">
                                <div class="col">
                                    <input type="email" class="form-control text-center" id="Username" placeholder="Username (Email)" asp-for="Username">
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row mb-3 justify-content-center">
                                <div class="col">
                                    <input type="password" class="form-control text-center" id="Pass" placeholder="Password" asp-for="Pass">
                                    <span asp-validation-for="Pass" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row justify-content-center">
                                <div class="col text-danger">@ViewBag.ErrorMessage</div>
                            </div>
                            <div class="row mt-5 justify-content-center">
                                <button type="submit" class="btn btn-primary col-6">Sign in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>"
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


