@model List<PersonasAPI.Models.PersonaModelo>
@{
    ViewData["Title"] = "ListaPersonas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card text-black">
    <div class="card-header">
        <div class="row">
            <div class="col-6" style="display: flex; justify-content: left; align-items: center;">
                <div>Lista Personas</div>
            </div>
            <div class="col-6" align="right">
                <a asp-action="GuardarPersona" asp-controller="Personas" class="btn btn-outline-success"><i class="bi bi-plus-circle-dotted"></i> Crear Persona</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Nombre</th>
                        <th scope="col">DNI</th>
                        <th scope="col">Email</th>
                        <th scope="col">Fecha Creacion</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="col">@item.FullName</td>
                            <td scope="col">@item.FullDNI</td>
                            <td scope="col">@item.Email</td>
                            <td scope="col">@item.CreatedAt</td>
                            <td scope="col">
                                <a class="btn btn-outline-warning" asp-action="EditarPersona" asp-controller="Personas" asp-route-IdPerson="@item.IdPerson">Editar</a>
                                <a class="btn btn-outline-danger" asp-action="EliminarPersona" asp-controller="Personas" asp-route-IdPerson="@item.IdPerson">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

